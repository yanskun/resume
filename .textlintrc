{
  "rules": {
    "max-ten": {
      "max": 3
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "preset-ja-technical-writing": true,
    "no-mix-dearu-desumasu": {
      "preferInHeader": "",
      "preferInBody": "である",
      "preferInList": "である"
    }
  },
  "filters": {
    "allowlist": {
      "allow": [
        "24時間",
        "365日",
        "1度",
        "/\\d{1,2}週間/",
        "以下"
      ]
    }
  }
}
